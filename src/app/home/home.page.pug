ion-header()
  ion-toolbar(color="primary")
    ion-title Ноme
ion-content.home-content
  ion-fab(vertical="bottom" horizontal="end" slot="fixed")
    ion-fab-button
      ion-icon(name="add")
    ion-fab-list(side="top")
      ion-fab-button(color="secondary")
        ion-icon(name="exit", (click)="exitApp()")
      ion-fab-button(color="danger", (click)="removeAllItems()")
        ion-icon(name="trash")
      ion-fab-button(color="success", routerLink="/add-company")
        ion-icon(name="add")
  ion-list
    ion-item(*ngFor="let company of listCompanies", lines="full")
      ion-thumbnail((click)="openDetails(company)")
        ion-img([src]="company.image")
      ion-label.label-item((click)="openDetails(company)") {{company.name}}
        h2 {{company.city}}
        p {{company.address}}
      ion-button(color="danger", (click)="removeCompany($event, company.id);$event.stopPropagation;")
        ion-icon(name="trash")
  .bottom-scroll &nbsp;
  ion-infinite-scroll(threshold="100px", (ionInfinite)="loadData($event)")
    ion-infinite-scroll-content(loadingSpinner="bubbles")